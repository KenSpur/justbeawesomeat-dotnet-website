{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
         "serverFarm": {
            "type": "object"
        },
        "appInsights": {
          "type": "object"  
        },    
        "storageAccount": {
            "type": "object"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "type": "Microsoft.Web/sites",
            "name": "[parameters('resourceName')]",
            "location": "[parameters('location')]",
            "kind": "app",
            "properties": {
                "serverFarmId": "[parameters('serverFarm').resourceId]",
                "httpsOnly": true,
                "appSettings": [
                    {
                        "name": "AppInsights__InstrumentationKey",
                        "value": "[parameters('appInsights').InstrumentationKey]"
                    },
                    {
                        "name": "AzureStorage__ConnectionString",
                        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccount').name, ';AccountKey=', parameters('storageAccount').keys[0].value, ';EndpointSuffix=', environment().suffixes.storage)]"
                    },
                    {
                        "name": "AzureStorage__WebsitePageDataContainer",
                        "value": "[parameters('storageAccount').websitePageDataContainerName]"
                    }
                ]
            }
        }
    ],
    "outputs": {
        "resource": {
            "type": "object",
            "value": {
                "name":  "[parameters('resourceName')]",
                "resourceId": "[resourceId('Microsoft.Web/sites', parameters('resourceName'))]"
            }
        }
    }
}