@using Application.Shared.ResumePage

<div class="block-title">
    <h3>Certification</h3>
</div>
<div class="timeline">
    @foreach (var certification in Collection)
    {
        <!-- Single event -->
        <div class="timeline-event te-primary">
            <h5 class="event-date">@certification.Period</h5>
            <h4 class="event-name">@certification.Title</h4>
            <span class="event-description">@certification.Authority</span>
            <p>@certification.Description</p>
        </div>
    }
</div>

@code
{
    [Parameter]
    public ICollection<Certification> Collection { get; set; } = new List<Certification>();
}
